{
  "name": "test-starter",
  "version": "1.0.0",
  "description": "starter code for React app with PostCSS, BrowserSync and Hot Reloading, Redux and GraphQL",
  "main": "index.js",
  "scripts": {
    "start:js": "react-scripts start",
    "start:css": "npm run build:css -- --watch",
    "start": "npm run build:css && npm-run-all -p start:css start:js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss -d ./src/compiled ./src/styles/style.css",
    "build:js": "react-scripts build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.0.14",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-hexrgba": "^1.0.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^2.1.2",
    "postcss-simple-vars": "^4.1.0"
  }
}
